@{
}

@model Book

<div class="card m-1 p-1">
    <h4>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price</small></span>

    </h4>

    <ul>
        <li>Book Author: @Model.Author</li>
        <li>Book Publisher: @Model.Publisher</li>
        <li>Book ISBN: @Model.Isbn</li>
        <li>Book Description: @Model.Category</li>
        <li>Number of Pages: @Model.PageCount</li>
        
    </ul>
</div>